      .author-card.author-card-skills
        if site.data.skill
          - let background = '#fff'
          - let evenList = site.data.skill.link_list.filter((x, index) => index % 2 === 0)
          - let oddList = site.data.skill.link_list.filter((x, index) => index % 2 === 1)
