case theme.math.use
  when 'mathjax'
    if (theme.math.per_page && (is_post() || is_page())) || page.mathjax
      include ./mathjax.pug

  when 'katex'
    if (theme.math.per_page && (is_post() || is_page())) || page.katex
      include ./katex.pug

if theme.mermaid.enable
  include ./mermaid.pug

if theme.chartjs.enable
  include ./chartjs.pug