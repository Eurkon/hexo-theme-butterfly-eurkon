nav#nav
  #nav-group
    span#blog-info
      if theme.nav.logo
        a(href=url_for('/') title=config.title)
          img.site-icon(src=url_for(theme.nav.logo))
        
      if theme.nav.display_title
        a.site-page(href=url_for('/') title=config.title)
          span.site-name=config.title
          i.fas.fa-home

      //- if globalPageType === 'post' && theme.nav.display_post_title
      //-   a.nav-page-title(href=url_for('/') )
      //-     span.site-name=(page.title || config.title)

    a.nav-page-title(title=_p("rightside.back_to_top") onclick="btf.scrollToDest(0, 500)")
      span#page-title.site-name=(pageTitle || page.title || config.title)
    
    if theme.menu
      #menus
        != partial('includes/header/menu_item', {}, {cache: true})

    #hotkey
      if theme.search.use
        #search-button
          span.site-page.social-icon.search(href="javascript:void(0);" title=_p('search.title'))
            i.fas.fa-search.fa-fw
            span= ' ' + _p('search.title')
      //- if (theme.darkmode.enable && theme.darkmode.button)
      //-   #mode-button
      //-     a.site-page(title=_p('rightside.night_mode_title') onclick="btf.switchDarkMode()")
      //-       i.fas.fa-sun.fa-fw
      //-       i.fas.fa-moon.fa-fw
      if page.comments !== false && theme.comments.use
        #comment-button
          a.site-page(href="#post-comment" title=_p("rightside.scroll_to_comment"))
            i.fas.fa-comments.fa-fw
      #setting-button(onclick="eurkon.switchRightSide();")
        a.site-page(href="javascript:void(0);" title=_p("rightside.setting"))
          i.fas.fa-sliders.fa-fw
      #top-button
        a.site-page(href="javascript:void(0);" title=_p("rightside.back_to_top") onclick="btf.scrollToDest(0, 500)")
          i.fas.fa-arrow-up.fa-fw
      #toggle-menu
        a.site-page(href="javascript:void(0);")
          i.fas.fa-bars.fa-fw