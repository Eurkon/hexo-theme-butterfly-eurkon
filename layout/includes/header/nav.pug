nav#nav
  #nav-group
    span#blog_name
      a#site-name(href=url_for('/'))
        span #[=config.title]
        i.fas.fa-home
    span#page_name
      a#page-title(title=_p("rightside.back_to_top") onclick="btf.scrollToDest(0, 500)")
        span #[=config.title]
      
    #menus
      !=partial('includes/header/menu_item', {}, {cache: true})

    #hotkey
      if (theme.algolia_search.enable || theme.local_search.enable)
        #search-button
          a.site-page.social-icon.search(title=_p('search.title'))
            i.fas.fa-search.fa-fw
      //- if (theme.darkmode.enable && theme.darkmode.button)
      //-   #mode-button
      //-     a.site-page(title=_p('rightside.night_mode_title') onclick="btf.switchDarkMode()")
      //-       i.fas.fa-sun.fa-fw
      //-       i.fas.fa-moon.fa-fw
      if (page.comments !== false && theme.comments && theme.comments.use)
        #comment-button
          a.site-page(href="#post-comment" title=_p("rightside.scroll_to_comment"))
            i.fas.fa-comments.fa-fw
      #setting-button
        a.site-page(title=_p("rightside.setting"))
          i.fas.fa-gear.fa-fw
      #top-button
        a.site-page(title=_p("rightside.back_to_top") onclick="btf.scrollToDest(0, 500)")
          i.fas.fa-arrow-up.fa-fw
      #toggle-menu
        a.site-page
          i.fas.fa-bars.fa-fw
