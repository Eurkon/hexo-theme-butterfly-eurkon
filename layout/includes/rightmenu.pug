      i.fas.fa-comment
      span=_p('引用评论')
    .rightmenu-item#menu-paste
      i.fas.fa-paste
      span=_p('粘贴文本')
    .rightmenu-item#menu-search
      i.fas.fa-search
      span=_p('在本站搜索')
