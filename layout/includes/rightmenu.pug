#rightmenu
  .rightmenu-group.rightmenu-small
    .rightmenu-item#menu-backward(onclick="window.history.back()")
      i.fas.fa-arrow-left
    .rightmenu-item#menu-forward(onclick="window.history.forward()")
      i.fas.fa-arrow-right
    .rightmenu-item#menu-refresh(onclick="window.history.reload()")
      i.fas.fa-arrow-rotate-right
    .rightmenu-item#menu-top(onclick="btf.scrollToDest(0, 500)")
      i.fas.fa-arrow-up
  .rightmenu-group.rightmenu-line#rightmenu-text
    .rightmenu-item#menu-copy
      i.fas.fa-copy
      span=_p('复制内容')
