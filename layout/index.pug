extends includes/layout.pug

block content
  include ./includes/mixins/post-ui.pug
  #recent-posts.recent-posts
    if theme.swiperNotice.enable
      .recent-post-item(style='width:100%; height:auto; padding: 0.6rem 1rem;')
        !=partial('includes/swiper-notice', {}, {cache:theme.fragment_cache})
    if theme.catalogMagnet.enable
      .recent-post-item(style='width:100%; height:auto')
    if theme.swiperPost.enable
      .recent-post-item(style='width:100%; height:auto;')
        !=partial('includes/swiper-post', {}, {cache:theme.fragment_cache})
    +postUI
    include includes/pagination.pug